# Firecrawl MCP Server Configuration
# Copy this file to .env and configure your settings

# ==============================================
# TRANSPORT CONFIGURATION
# ==============================================

# Enable STREAMABLE_HTTP transport (MCP 2025-06-18 protocol)
STREAMABLE_HTTP=true

# Server binding configuration
HOST=0.0.0.0
PORT=3000

# CORS configuration (comma-separated list of allowed origins)
# Leave empty to allow all origins in development
ALLOWED_ORIGINS=

# ==============================================
# FIRECRAWL API CONFIGURATION
# ==============================================

# Required for cloud API usage
FIRECRAWL_API_KEY=your-api-key-here

# Optional: Custom API endpoint for self-hosted instances
# If not provided, the cloud API will be used
FIRECRAWL_API_URL=http://10.10.1.81:3002

# ==============================================
# RETRY CONFIGURATION
# ==============================================

# Maximum number of retry attempts for rate-limited requests
FIRECRAWL_RETRY_MAX_ATTEMPTS=3

# Initial delay before first retry (in milliseconds)
FIRECRAWL_RETRY_INITIAL_DELAY=1000

# Maximum delay between retries (in milliseconds)
FIRECRAWL_RETRY_MAX_DELAY=10000

# Exponential backoff multiplier
FIRECRAWL_RETRY_BACKOFF_FACTOR=2

# ==============================================
# CREDIT MONITORING
# ==============================================

# Credit usage warning threshold
FIRECRAWL_CREDIT_WARNING_THRESHOLD=1000

# Credit usage critical threshold
FIRECRAWL_CREDIT_CRITICAL_THRESHOLD=100

# ==============================================
# LEGACY TRANSPORT OPTIONS
# ==============================================

# Enable local SSE transport (legacy)
# SSE_LOCAL=true

# Enable cloud SSE transport (legacy)
# CLOUD_SERVICE=true

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================

# Enable debug logging
# DEBUG=true

# Log level (error, warn, info, debug)
# LOG_LEVEL=info