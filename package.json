{
  "name": "firecrawl-monorepo",
  "version": "4.0.0",
  "private": true,
  "description": "Monorepo for Firecrawl CLI and MCP server.",
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "nx": "nx",
    "build": "nx run-many -t build --all",
    "test": "npm run build && node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns \"\\\\.int\\\\.test\\\\.ts$\"",
    "test:integration": "npm run build && node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --testPathPattern \"\\\\.int\\\\.test\\\\.ts$\"",
    "lint": "eslint \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint:fix": "eslint \"apps/**/*.ts\" \"libs/**/*.ts\" --fix",
    "format": "prettier --write ."
  },
  "license": "MIT",
  "dependencies": {},
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "mcp",
    "firecrawl",
    "web-scraping",
    "crawler",
    "content-extraction"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firecrawl/firecrawl-mcp-server.git"
  },
  "author": "firecrawl",
  "bugs": {
    "url": "https://github.com/firecrawl/firecrawl-mcp-server/issues"
  },
  "homepage": "https://github.com/firecrawl/firecrawl-mcp-server#readme",
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@nx/workspace": "^20.8.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.1",
    "jest": "^29.7.0",
    "nx": "^20.8.2",
    "tsup": "^8.5.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.9.2"
  }
}
